</div>




<div class="container ">
    <div class="row ">
        <% c.forEach((item)=>{ %>
        
            <div class="col-md-4 text-center mb-5 ">
                <a href="/school_list/<%= item.name %>" class="text-decoration-none">
                    <div class="box">
                        <img src="<%= item.image.url %>" class="image w-100" alt="">
                    </div>
                    <h3 class="ab animate__heartBeat", style="color: whitesmoke;text-shadow: 2px 2px #555;">
                        <%= item.name %>
                    </h3>
                </a>
            </div>

            <% }) %>
            

    </div>
    <!--row end-->
